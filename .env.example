# ======================================
# üéì AI Educational Platform - Environment Variables
# ======================================
# Copy this file to .env and fill in your actual values
# Get API keys from: https://aistudio.google.com/ and https://console.firebase.google.com/

# ======================================
# ü§ñ AI Configuration (REQUIRED)
# ======================================
# Primary AI: Get from https://aistudio.google.com/
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Secondary AI: Same key works for Gemma 3 API
VITE_GEMMA_API_KEY=your_gemini_api_key_here

# Local AI: Ollama endpoint (if running locally)
VITE_OLLAMA_ENDPOINT=http://localhost:11434

# AI Preferences
VITE_PREFERRED_AI_MODEL=auto
VITE_PREFERRED_AI_PROVIDER=auto
VITE_ENABLE_AI_FALLBACK=true

# ======================================
# üî• Firebase Configuration (REQUIRED)
# ======================================
# Get from: https://console.firebase.google.com/ > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ======================================
# üöÄ Feature Flags (OPTIONAL)
# ======================================
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_GEMMA_OFFLINE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_REMOTE_CONFIG=true

# ======================================
# üõ†Ô∏è Development Settings (OPTIONAL)
# ======================================
VITE_ENV=development
VITE_DEBUG=true
VITE_USE_EMULATORS=false

# ======================================
# üíæ Storage Configuration (OPTIONAL)
# ======================================
VITE_MAX_CACHE_SIZE=52428800
VITE_CACHE_TTL=86400000
VITE_ENABLE_ENCRYPTION=false
VITE_AUTO_CLEANUP_EXPIRED=true

# ======================================
# üéØ AI Model Configuration (OPTIONAL)
# ======================================
VITE_AI_CACHE_TTL=7200000
VITE_MAX_AI_RETRIES=3
VITE_AI_TIMEOUT=30000

# ======================================
# üìä Analytics & Monitoring (OPTIONAL)
# ======================================
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_USER_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_METRICS=true

# ======================================
# üîí Security (OPTIONAL)
# ======================================
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURE_HEADERS=true
